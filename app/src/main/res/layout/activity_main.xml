<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <ImageView
    android:id="@+id/chess"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:gravity="center"
    app:srcCompat="@drawable/chess" />

<ImageView
    android:id="@+id/robo"
    android:layout_width="38dp"
    android:layout_height="57dp"
    android:layout_marginLeft="148dp"
    android:layout_marginTop="257dp"
    app:srcCompat="@drawable/robo" />

    <Button
        android:id="@+id/control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="103dp"
        android:text="JOYSTICK"
        android:textColor="@color/brown"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="7dp"
        android:text="NEXT"
        android:textColor="@color/brown"
        android:textSize="24sp"

        />


<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Team SquaDsquare"
    android:textSize="18sp"
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"/>
<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bluetooth Address"
    android:textSize="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:layout_above="@+id/textView2"/>

    <ImageView
        android:id="@+id/up"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="160dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/up1" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="160dp"
        android:rotation="180"
        android:visibility="invisible"
        app:srcCompat="@drawable/up1" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="353dp"
        android:layout_marginLeft="98dp"
        android:rotation="-90"
        android:visibility="invisible"
        app:srcCompat="@drawable/up1" />

    <ImageView
        android:id="@+id/right"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginLeft="222dp"
        android:layout_marginTop="353dp"
        android:rotation="90"
        android:visibility="invisible"
        app:srcCompat="@drawable/up1" />

    <ImageView
        android:id="@+id/resume"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="353dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/resume" />


</RelativeLayout>